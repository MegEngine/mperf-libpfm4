load(
    "@//tools/toolchain:toolchain.bzl",
    "if_armv7",
    "if_aarch64",
    "if_x86",
    "if_riscv64",
)
cc_library(
    name = "pfm4",
    srcs = [
        "lib/events/perf_events.h",
        "lib/pfmlib_common.c",
        "lib/pfmlib_perf_event.c",
        "lib/pfmlib_perf_event_pmu.c",
        "lib/pfmlib_perf_event_priv.h",
        "lib/pfmlib_perf_event_raw.c",
        "lib/pfmlib_priv.h",
    ],
    hdrs = [
        "include/perfmon/perf_event.h",
        "include/perfmon/pfmlib.h",
        "include/perfmon/pfmlib_perf_event.h",
    ],
    copts = [
        "-D_REENTRANT",
        "-DCONFIG_PFMLIB_DEBUG",
        "-DCONFIG_PFMLIB_OS_LINUX",
        "-DCONFIG_PFMLIB_PERFMON",
        "-Wno-ignored-qualifiers",
        "-Wno-implicit-function-declaration",
    ] + if_x86(["-DCONFIG_PFMLIB_ARCH_X86"])
      + if_aarch64(["-DCONFIG_PFMLIB_ARCH_ARM64"])
      + if_armv7(["-DCONFIG_PFMLIB_ARCH_ARM"]),
    includes = ["include"],
    visibility = [
        "//visibility:public",
    ],
    deps = if_x86([":pfm4_x86"])
      + if_aarch64([":pfm4_arm64"])
      + if_armv7([":pfm4_arm"]),
)

